<server description="MongoConnect">

    <featureManager>
    	<feature>transportSecurity-1.0</feature>
		<feature>servlet-3.0</feature>
		<feature>jsf-2.0</feature>
	</featureManager>

    <httpEndpoint httpPort="9080" httpsPort="9443" id="defaultHttpEndpoint"/>
    
    <keyStore id="defaultKeyStore" location="${server.output.dir}/resources/security/key.jks" password="password" type="jks"/>
    <keyStore id="defaultTrustStore" location="${server.output.dir}/resources/security/trust.jks" password="password" type="jks"/>
</server>
